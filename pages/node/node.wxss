.page-container{
  padding: 60rpx 30rpx;
}
.node-title{
  font-size: 22px;
  line-height: 60rpx;
  font-weight: 600;
  color: #333;
}
.node-description{
  font-size: 12px;
  color: #666;
  margin-bottom: 60rpx;
}
.node-container{
  display: flex;
  flex-wrap: wrap;
}
.node-item{
  display: inline-block;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #333;
  margin: 0 30rpx 30rpx 0;
  font-size: 14px;
  color: #333;
}
.node-item_hover{
  background-color: #333;
  color: #fff;
}