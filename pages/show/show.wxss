.page-container{
  background-color: #f5f5f5;
}
.topic-container{
  padding: 30rpx;
  margin-bottom: 10px ;
  background-color: #fff;
}
.topic-userInfo{
  display: flex;
  margin-bottom: 10px;
}
.topic-userInfo .topic-userInfo-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 4px;
  margin-right: 8px;
  background-color: #f5f5f5;
}
.topic-userInfo-username{
  font-size: 12px;
  color: #666;
  display: flex;
  align-items: flex-end;
}
.topic-title{
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}
.topic-description{
  font-size: 14px;
  color: #666;
  text-align: justify;
}